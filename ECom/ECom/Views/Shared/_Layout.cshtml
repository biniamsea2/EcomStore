@using Microsoft.AspNetCore.Identity
@using ECom.Models
@inject SignInManager<ApplicationUser> SignInManager
<!DOCTYPE html>

@*This is the page that will be displayed to the user that will indicate to the user that they have successfully logged in.*@


<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/styles/reset.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/styles/style.css" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-light bg-light navbar-expand-lg">
        <a href="#" class="navbar-brand">My Website</a>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav ml-auto">
                <li class="navbar-item">
                    <a href="~/Home" class="nav-link">Homepage</a>
                </li>
                <li class="navbar-item">
                    <a href="~/Shared/" class="nav-link">Cars</a>
                </li>
                @*<li class="navbar-item">
                    <a href="~/Account/Login" class="nav-link">Login</a>
                </li>
                <li class="navbar-item">
                    <a href="~/Account/Register" class="nav-link">Register</a>
                </li>*@
                <li>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <p id="welcome">WELCOME @User.Claims.First(c => c.Type == "FullName").Value!</p>
                        <form asp-page="/Account/Logout">
                            <button type="submit">LogOut</button>
                        </form>
                    }
                    else
                    {
                        <a href="~/Account/Login" class="nav-link">Login</a>
                        <a href="~/Account/Register" class="nav-link">Register</a>
                        <p> WELCOME USER!</p>
                    }
                </li>
            </ul>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>
</html>
